{#
/**
 * @file
 * Theme override for a details element.
 *
 * Available variables
 * - attributes: A list of HTML attributes for the details element.
 * - errors: (optional) Any errors for this details element, may not be set.
 * - title: (optional) The title of the element, may not be set.
 * - description: (optional) The description of the element, may not be set.
 * - children: (optional) The children of the element, may not be set.
 * - value: (optional) The value of the element, may not be set.
 *
 * @see template_preprocess_details()
 */
#}
{% set show = element['#open'] %}

<div{{ attributes.addClass('card card-details') }}>
  {%- if title -%}
    <h3 class="card-header">
      <div{{ summary_attributes
        .addClass('card-header-sub')
        .setAttribute('id', 'heading-' ~ id)
        .setAttribute('aria-expanded', 'true')
        .setAttribute('data-bs-target', '#collapse-' ~ id)
        .setAttribute('data-bs-toggle', 'collapse')
        .setAttribute('aria-controls', 'collapse-' ~ id)
      }}>
        {{- title -}}
      </div>
    </h3>
  {%- endif -%}

  <div id="collapse-{{ id }}" class="collapse{{ show ? ' show' : '' }}" aria-labelledby="heading-{{ id }}">
    <div class="card-body">
      {% if errors %}
        <div class="alert alert-danger" role="alert">
          <strong>{{ errors }}</strong>
        </div>
      {% endif %}
      {%- if description -%}
        <small class="details-description text-muted">{{ description }}</small>
      {%- endif -%}
      {%- if children -%}
        {{ children }}
      {%- endif -%}
      {%- if value -%}
        {{ value }}
      {%- endif -%}
    </div>
  </div>
</div>

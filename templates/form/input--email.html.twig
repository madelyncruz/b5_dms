{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{# Remove "-value" from the element ID in order to make it compatible with core inline form errors #}
{% set attr = attributes.toArray %}
{% set id = attr.id|replace({ '-value': '' }) %}
<input{{ attributes.setAttribute('id', id).addClass('form-control') }} />{{ children }}

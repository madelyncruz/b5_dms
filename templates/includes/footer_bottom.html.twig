{% if page.footer_bottom_left or page.footer_bottom_right %}
<div{{ footer_bottom_attributes }}>
  <div class="row">
    {% if page.footer_bottom_left %}
    <div class="col-sm-6 -left d-flex gap-6">
      {{ page.footer_bottom_left }}
    </div>
    {% endif %}
    {% if page.footer_bottom_right %}
    <div class="col-sm-6 -right">
      {{ page.footer_bottom_right }}
    </div>
    {% endif %}
  </div>
</div>
{% endif %}

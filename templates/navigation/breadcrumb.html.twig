{#
/**
 * @file
 * Default theme implementation for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 *
 * @ingroup themeable
 */
#}
{% if breadcrumb %}
  <nav role="navigation" aria-labelledby="system-breadcrumb">
    <h2 id="system-breadcrumb" class="visually-hidden">{{ 'Breadcrumb'|t }}</h2>
    <ul class="breadcrumb">
    {% for item in breadcrumb %}

      {% set listClass = '' %}
      {% set listAttr = '' %}

      {% if loop.first %}
        {% set listClass = ' first' %}
      {% elseif not item.url %}
        {% set listClass = ' active' %}
      {% elseif loop.last %}
        {% set listClass = ' last' %}
      {% endif %}

      <li class="breadcrumb-item{{ listClass }}"{{ not item.url ? ' aria-current="page"' : '' }}>
        {% if item.url %}
          <a href="{{ item.url }}">{{ item.text }}</a>
        {% else %}
          {{ item.text }}
        {% endif %}
      </li>
    {% endfor %}
    </ol>
  </nav>
{% endif %}
